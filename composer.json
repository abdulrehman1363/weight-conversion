{
    "name": "qtech/weight-conversion",
    "description": "Weight Conversions in PHP",
    "keywords": [
        "QTech",
        "weight-conversion"
    ],
    "homepage": "https://github.com/qtech/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdul Rehman Aziz",
            "email": "abdulrehmanaziz256@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "QTech\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "QTech\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
